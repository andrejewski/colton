{
  "name": "colton",
  "description": "Contracting testing for JavaScript",
  "version": "0.0.1",
  "author": "Chris Andrejewski <christopher.andrejewski@gmail.com>",
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "babel-preset-power-assert"
    ],
    "plugins": [],
    "env": {
      "nyc": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "bugs": {
    "url": "https://github.com/andrejewski/colton/issues"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-power-assert": "^1.0.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-regenerator-runtime": "^6.5.0",
    "babel-register": "^6.11.6",
    "del": "^2.2.1",
    "fixpack": "^2.3.1",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-sourcemaps": "^1.6.0",
    "nyc": "^9.0.1",
    "power-assert": "^1.4.2",
    "pre-commit": "^1.1.3",
    "pre-push": "^0.1.1",
    "source-map-support": "^0.4.2",
    "standard": "^8.4.0"
  },
  "homepage": "https://github.com/andrejewski/colton#readme",
  "keywords": [
    "contract",
    "testing",
    "mock",
    "stub"
  ],
  "license": "ISC",
  "main": "lib/index.js",
  "nyc": {
    "include": [
      "src/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false,
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "pre-commit": [
    "lint"
  ],
  "pre-push": [
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrejewski/colton.git"
  },
  "scripts": {
    "build": "gulp",
    "lint": "standard --fix && fixpack",
    "prepublish": "npm run build && npm run test",
    "report": "NODE_ENV=nyc nyc npm test",
    "test": "npm run lint && ava",
    "watch": "gulp watch"
  }
}
